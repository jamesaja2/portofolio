# Database - Neon PostgreSQL
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# TinyMCE API Key (for rich text editor in admin panel)
NEXT_PUBLIC_TINYMCE_API_KEY=your_tinymce_api_key_here

# Google Gemini API Key (for AI chatbot)
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here

# Admin Credentials (for initial setup - used by scripts/setup_auth.js)
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=your_secure_password_here

# Admin Email (for contact form notifications)
ADMIN_EMAIL=admin@example.com
